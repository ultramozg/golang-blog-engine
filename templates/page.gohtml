<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>My Posts</title>
</head>
<body>
	{{if .LoggedIn}}
	<div>
		<form method="POST" action="/logout">
			<input type="submit" value="logout" />
		</form>
	</div>
	{{end}}
	{{if not .LoggedIn}}
	<div>
		<form method="POST" action="/login">
			<label>Login</label><input name="login" type="text" value="" />
			<label>Password</label><input name="password" type="text" value="" />
			<input type="submit" value="login" />
		</form>
	</div>
	{{end}}
<ul>
	{{range .Posts}}
	<li>{{.Title}} {{.Date}}</li>
	{{end}}
</ul>
	{{if .LoggedIn}}
	<div>
		<form method="POST" action="/">
			<label>Title</label><input name="title" type="text" value="" />
			<label>Body</label><input name="body" type="text" value="" />
			<input type="submit" value="submit" />
		</form>
	</div>
	{{end}}
	<a href="{{.PrevPage}}">Prev Page</a>
	<a href="{{.NextPage}}">Next Page</a>
</body>
</html>
